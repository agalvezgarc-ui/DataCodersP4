<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="DataCoders.vistaFX.ArticulosViewController">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button text="Mostrar lista" onAction="#onMostrarLista"/>
            <Button text="Añadir nuevo" onAction="#onAnadirNuevo"/>
            <Button text="Volver al menú" onAction="#onVolverMenu"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tablaArticulos">
            <columns>
                <TableColumn fx:id="colCodigo" text="Código"/>
                <TableColumn fx:id="colDescripcion" text="Descripción"/>
                <TableColumn fx:id="colPrecioVenta" text="Precio venta"/>
                <TableColumn fx:id="colGastoEnvio" text="Gasto envío"/>
                <TableColumn fx:id="colTiempoPrep" text="Tiempo prep (min)"/>
            </columns>
        </TableView>
    </center>

</BorderPane>

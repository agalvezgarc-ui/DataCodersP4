<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="DataCoders.vistaFX.PedidosViewController">

    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10">
                <Button text="Añadir nuevo" onAction="#onAnadirNuevo"/>
                <Button text="Pendientes" onAction="#onPendientes"/>
                <Button text="Enviados" onAction="#onEnviados"/>
                <Button text="Eliminar pedido" onAction="#onEliminarPedido"/>
                <Button text="Volver al menú" onAction="#onVolverMenu"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Filtrar por email (opcional):"/>
                <TextField fx:id="tfEmailFiltro" promptText="email@dominio.com"/>
                <Button text="Aplicar filtro" onAction="#onAplicarFiltro"/>
                <Button text="Quitar filtro" onAction="#onQuitarFiltro"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tablaPedidos">
            <columns>
                <TableColumn fx:id="colNumero" text="Nº"/>
                <TableColumn fx:id="colEmail" text="Cliente (email)"/>
                <TableColumn fx:id="colCodigoArticulo" text="Artículo (código)"/>
                <TableColumn fx:id="colCantidad" text="Cantidad"/>
                <TableColumn fx:id="colPrecioUnit" text="Precio unit."/>
                <TableColumn fx:id="colFechaEntrega" text="Fecha entrega"/>
                <TableColumn fx:id="colEnviado" text="Enviado"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
